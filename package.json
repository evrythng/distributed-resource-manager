{
  "name": "@evrythng/connection-manager",
  "version": "0.0.1",
  "description": "",
  "main": "lib/server.js",
  "scripts": {
    "start": "node lib/connection-manager.js",
    "eslint": "eslint --ext .js .",
    "pretest": "./test/setup.sh",
    "posttest": "./test/teardown.sh",
    "test": "npm run eslint && nyc node_modules/.bin/_mocha 'test/**/*.js'",
    "test:it": "nyc node_modules/.bin/_mocha 'test/it/**/*.js'",
    "test:unit": "nyc node_modules/.bin/_mocha 'test/unit/**/*.js'",
    "create-build-info": "node scripts/build-info.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/evrythng/connection-manager.git"
  },
  "eslintConfig": {
    "extends": "@evrythng/eslint-config-evrythng"
  },
  "nyc": {
    "exclude": [
      "test/**/*.js"
    ],
    "reporter": [
      "cobertura",
      "html",
      "lcov",
      "text-summary"
    ],
    "report-dir": "./reports"
  },
  "license": "SEE LICENSE IN LICENSE",
  "engines": {
    "node": ">=8.9.x",
    "npm": ">=5.6.0"
  },
  "dependencies": {
    "@evrythng/thng-node-config": "^2.0.0",
    "@evrythng/thng-node-core": "^6.0.1",
    "async": "^2.6.0",
    "bunyan": "^1.8.12",
    "newrelic": "^3.2.0",
    "node-fetch": "^2.1.2"
  },
  "devDependencies": {
    "@evrythng/eslint-config-evrythng": "0.0.1",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "eslint": "^4.18.2",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsdoc": "^3.3.1",
    "express": "^4.16.3",
    "mocha": "^5.0.4",
    "nock": "^9.2.5",
    "nyc": "^11.6.0",
    "rewire": "^3.0.2",
    "sinon": "^4.4.6",
    "supertest": "^3.0.0",
    "ws": "^5.1.1"
  }
}
